<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".setting.ui.CheckOutFragment"
    android:background="@drawable/bottom_sheet_background">

    <!-- Title Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="CHECK OUT"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:paddingBottom="8dp" />

    <!-- Address Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shipping Address"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold" />

    <!-- Address RecyclerView in a CardView for better appearance -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:visibility="visible"
        app:cardCornerRadius="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" />
    </androidx.cardview.widget.CardView>

    <!-- Button to Add New Address -->
    <Button
        android:layout_gravity="center"
        android:id="@+id/btn_add_new_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:layout_margin="20dp"
        android:backgroundTint="@color/light_gray"
        android:text="+ Add New Shipping Address" />
    <!-- Payment Method Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Method"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Payment Options -->
    <RadioGroup
        android:id="@+id/radio_group_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- PayPal Option -->
        <RadioButton
            android:id="@+id/pay_with_paypal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay with PayPal"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawablePadding="8dp"
            android:buttonTint="@color/colorPrimary" />

        <!-- Cash on Delivery Option -->
        <RadioButton
            android:id="@+id/cash_on_delivery"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Cash on Delivery"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawablePadding="8dp"
            android:buttonTint="@color/colorPrimary" />
    </RadioGroup>
    <Button
        android:id="@+id/ensureOrderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:text="Ensure Order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTotalLabel" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="gone" />
</LinearLayout>
