<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.couturecorner.home.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_brandsFragment"
            app:destination="@id/brandsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
        <action
            android:id="@+id/action_homeFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.couturecorner.favorite.ui.view.FavoriteFragment"
        android:label="Favorite"
        tools:layout="@layout/fragment_favorite" >
        <action
            android:id="@+id/action_favoriteFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.couturecorner.category.ui.CategoryFragment"
        android:label="Category"
        tools:layout="@layout/fragment_category" >
        <argument
            android:name="category"
            app:argType="string" />
        <action
            android:id="@+id/action_categoryFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_categoryFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.couturecorner.setting.ui.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_ordersFragment"
            app:destination="@id/ordersFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_addAdressFragment"
            app:destination="@id/addAdressFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_adressFragment"
            app:destination="@id/adressFragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.couturecorner.setting.ui.CartFragment"
        android:label="Cart" >
        <action
            android:id="@+id/action_cartFragment_to_checkOutFragment"
            app:destination="@id/checkOutFragment" />
    </fragment>
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/brandsFragment"
        android:name="com.example.couturecorner.brand.ui.BrandsFragment"
        android:label="Brands"
        tools:layout="@layout/fragment_brands">
        <action
            android:id="@+id/action_brandsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="brand"
            app:argType="string" />
        <argument
            android:name="productId"
            app:argType="string"
            android:defaultValue="" />
        <action
            android:id="@+id/action_brandsFragment_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/addAdressFragment"
        android:name="com.example.couturecorner.setting.ui.AddAdressFragment"
        android:label="Add Address"
        tools:layout="@layout/fragment_add_adress" >
        <action
            android:id="@+id/action_addAdressFragment_to_checkOutFragment"
            app:destination="@id/checkOutFragment" />
        <action
            android:id="@+id/action_addAdressFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
        <action
            android:id="@+id/action_addAdressFragment_to_adressFragment"
            app:destination="@id/adressFragment" />
        <action
            android:id="@+id/action_addAdressFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/checkOutFragment"
        android:name="com.example.couturecorner.setting.ui.CheckOutFragment"
        android:label="fragment_check_out"
        tools:layout="@layout/fragment_check_out" >
        <action
            android:id="@+id/action_checkOutFragment_to_addAdressFragment"
            app:destination="@id/addAdressFragment" />
        <action
            android:id="@+id/action_checkOutFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_checkOutFragment_to_addAdressFragment2"
            app:destination="@id/addAdressFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.couturecorner.setting.ui.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" >
        <action
            android:id="@+id/action_mapFragment_to_addAdressFragment"
            app:destination="@id/addAdressFragment" />
    </fragment>
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.example.couturecorner.productdetails.view.ProductDetailsFragment"
        android:label="Product Details"
        tools:layout="@layout/fragment_product_details" >
        <argument
            android:name="productId"
            app:argType="string"
            android:defaultValue="" />
        <action
            android:id="@+id/action_productDetailsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/adressFragment"
        android:name="com.example.couturecorner.setting.ui.AdressFragment"
        android:label="Address"
        tools:layout="@layout/fragment_adress" >
        <action
            android:id="@+id/action_adressFragment_to_addAdressFragment"
            app:destination="@id/addAdressFragment" />
    </fragment>
    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.example.couturecorner.order.ui.OrdersFragment"
        android:label="Orders"
        tools:layout="@layout/fragment_orders" >
        <action
            android:id="@+id/action_ordersFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
</navigation>
