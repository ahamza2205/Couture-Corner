<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".di.MyApplication"
        android:allowBackup="true"
        android:enableOnBackInvokedCallback="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/appstore"
        android:label="@string/app_name"
        android:roundIcon="@drawable/playstore"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoutureCorner"
        tools:targetApi="31">
        <activity
            android:name=".authentication.view.VerifyCodeActivity"
            android:exported="false" />
        <!-- SignUpActivity -->
        <activity
            android:name=".authentication.view.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".authentication.view.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <data android:scheme="com.example.couturecorner.setting" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity> <!-- MainActivity -->
        <activity
            android:name=".home.ui.MainActivity"
            android:exported="true" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>



</manifest>